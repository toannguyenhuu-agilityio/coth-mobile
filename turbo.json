{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "src/**",
        "app/**",
        "package.json",
        ".eslintrc*",
        "eslint.config.*"
      ],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "prebuild": {
      "cache": false,
      "outputs": [
        "android/**",
        "ios/**",
        "!android/build/**",
        "!ios/build/**",
        "!android/.gradle/**"
      ]
    },
    "build:android": {
      "dependsOn": ["prebuild"],
      "outputs": ["android/app/build/outputs/**"],
      "inputs": ["android/**", "!android/build/**", "!android/.gradle/**"],
      "env": ["ANDROID_HOME"]
    },
    "build:ios": {
      "dependsOn": ["prebuild"],
      "outputs": ["ios/build/**"],
      "inputs": ["ios/**", "!ios/build/**", "!ios/Pods/**"]
    },
    "eas:build:ios": {
      "cache": true,
      "inputs": ["ios/**", "!ios/build/**", "!ios/Pods/**"]
    },
    "android": {
      "cache": false,
      "persistent": true,
      "env": ["ANDROID_HOME"]
    },
    "ios": {
      "cache": false,
      "persistent": true
    },
    "storybook:android": {
      "cache": false,
      "persistent": true,
      "env": ["ANDROID_HOME"]
    },
    "storybook:ios": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:cov": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "format": {
      "cache": false
    }
  }
}
