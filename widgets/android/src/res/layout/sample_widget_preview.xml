<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample_widget_background"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="48sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days Streak"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARC OF THE HEART"
            android:textSize="9sp"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.1"
            android:padding="4dp"
            android:background="@drawable/sample_logo_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:weightSum="7">

        <!-- Sunday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Su"
                android:textSize="9sp"
                android:textColor="#999999" />

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/sample_day_completed">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="✓"
                    android:textSize="20sp"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium" />
            </FrameLayout>
        </LinearLayout>

        <!-- Monday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mo"
                android:textSize="9sp"
                android:textColor="#999999" />

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/sample_day_completed">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="✓"
                    android:textSize="20sp"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium" />
            </FrameLayout>
        </LinearLayout>

        <!-- Tuesday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu"
                android:textSize="9sp"
                android:textColor="#999999" />

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/sample_day_completed">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="✓"
                    android:textSize="20sp"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium" />
            </FrameLayout>
        </LinearLayout>

        <!-- Wednesday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We"
                android:textSize="9sp"
                android:textColor="#999999" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:text="11"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/sample_day_inactive" />
        </LinearLayout>

        <!-- Thursday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Th"
                android:textSize="9sp"
                android:textColor="#999999" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:text="12"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/sample_day_inactive" />
        </LinearLayout>

        <!-- Friday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fr"
                android:textSize="9sp"
                android:textColor="#999999" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:text="13"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/sample_day_inactive" />
        </LinearLayout>

        <!-- Saturday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sa"
                android:textSize="9sp"
                android:textColor="#999999" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:text="14"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/sample_day_inactive" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>